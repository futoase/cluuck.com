<!doctype html>
<html>
  <%= partial "site_header" %>
  <body>
    <%= partial "header" %>

    <div id="container">
      <aside>
        <h2>Recent Articles</h2>
        <ol>
          <% blog.articles.each do |article| %>
            <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
          <% end %>
        </ol>
      </aside>
    </div>

    <%= partial "footer" %>

  </body>
</html>
